<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/deep_purple_50"
    tools:context="mx.iteso.jaimeapp.pideseloajaime.ActivityLogin">


    <com.facebook.login.widget.LoginButton
        android:id="@+id/activity_login_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="180dp" />


    <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/activity_login_logo_picture"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/icon_jaime"
        app:civ_border_color="@color/deep_purple_600"
        app:civ_circle_background_color="@color/white"
        app:civ_border_width="2dp"
        android:layout_above="@+id/activity_login_logo_name"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="18dp" />

    <TextView
        android:id="@+id/activity_login_logo_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/activity_login_button"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="43dp"
        android:text="@string/logo_name"
        android:textColor="@color/deep_purple_600"
        android:textSize="30sp" />

</RelativeLayout>

